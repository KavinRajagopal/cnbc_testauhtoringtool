# OpenAI Configuration (Required)
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o-mini

# GitHub Configuration (Required)
# Get your token from: https://github.com/settings/tokens
# Required permissions: repo (full), workflow
GITHUB_TOKEN=ghp_your_github_token_here

# Target repository in format "owner/repo"
# Example: GITHUB_REPO=octocat/hello-world
GITHUB_REPO=your-username/your-repo

# Application Configuration
LOG_LEVEL=INFO

# Test Case Optimization Feature
ENABLE_TEST_OPTIMIZATION=true

# Similarity Detection (Component 1)
SIMILARITY_THRESHOLD=0.70
SIMILARITY_USE_EMBEDDINGS=true

# AI Optimization Suggestions (Component 2)
ENABLE_AI_SUGGESTIONS=true
AI_OPTIMIZATION_MODEL=gpt-4o-mini

# Redundancy Detection (Component 3)
CHECK_REDUNDANT_TESTS=true
CHECK_OUTDATED_IMPORTS=true

# Test Coverage Analysis Feature
ENABLE_COVERAGE_ANALYSIS=true

# Python Coverage
PYTHON_COVERAGE_TOOL=pytest-cov
PYTHON_MIN_COVERAGE=70

# JavaScript Coverage
JS_COVERAGE_TOOL=nyc
JS_MIN_COVERAGE=70

# Coverage Reporting
COVERAGE_INCLUDE_GAPS=true
COVERAGE_INCLUDE_RECOMMENDATIONS=true
COVERAGE_POST_TO_ISSUE=true
COVERAGE_POST_TO_PR=false

# Coverage Performance
COVERAGE_TIMEOUT=300
COVERAGE_CACHE_DEPS=true








